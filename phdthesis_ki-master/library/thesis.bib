  journal = {Genome Research},
  keywords = {Codon,Evolution; Molecular,Gene Expression Profiling,Gene Expression Regulation; Fungal,Genes; Fungal,Genome; Fungal,Models; Genetic,Phylogeny,Regulatory Elements; Transcriptional,Ribosomes,RNA; Fungal,RNA; Messenger,Saccharomyces,Species Specificity},
