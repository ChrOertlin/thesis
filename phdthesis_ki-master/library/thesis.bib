	keywords = {Breast Neoplasms, Female, {HCT}116 Cells, Humans, {MCF}-7 Cells, Mutation, Polyribosomes, Protein Biosynthesis, Ribosomes, {RNA}, Messenger, Sequence Analysis, {RNA}, Tumor Suppressor Protein p53},
