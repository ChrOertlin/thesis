@article{Gandin2016,
  title = {{{mTORC1}} and {{CK2}} Coordinate Ternary and {{eIF4F}} Complex Assembly},
  author = {Gandin, Valentina and Masvidal, Laia and Cargnello, Marie and Gyenis, Laszlo and McLaughlan, Shannon and Cai, Yutian and Tenkerian, Clara and Morita, Masahiro and Balanathan, Preetika and {Jean-Jean}, Olivier and Stambolic, Vuk and Trost, Matthias and Furic, Luc and Larose, Louise and Koromilas, Antonis E. and Asano, Katsura and Litchfield, David and Larsson, Ola and Topisirovic, Ivan},
